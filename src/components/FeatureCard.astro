---
import { useTranslations } from "@/i18n/utils";
import { Image } from "astro:assets";
import type { FeatureCardProps } from "@/data/FeatureData";
import type { TypeLang } from "@/lib/types";
import { Card, CardContent, CardHeader } from "./ui/card";

interface Props extends FeatureCardProps {
  lang: TypeLang;
}

const { srcImage, alt, title, description, lang } = Astro.props;
const t = useTranslations(lang);
---

<Card
  id={`${title} feature card`}
  aria-label={`${title} feature card`}
  className="relative w-full p-0 h-full overflow-hidden shadow-xl shadow-gray-200"
>
  <CardHeader className="p-0">
    <Image
      src={srcImage}
      alt={alt}
      class="w-full max-h-80 object-cover"
      width={630}
      height={454}
      loading="lazy"
    />
  </CardHeader>
  <CardContent
    className="md:px-6 md:pb-6 px-4 pb-4 pt-0 space-y-4 align-self-start"
  >
    <h3 class="text-3xl font-bold text-primary mb-4">
      {t(title)}
    </h3>
    <p class="xl:text-lg text-base leading-snug">
      {t(description)}
    </p>
  </CardContent>
</Card>
