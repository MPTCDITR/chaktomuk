---
import { useTranslations } from "@/i18n/utils";
import { Image } from "astro:assets";
import type { FeatureCardProps } from "@/data/FeatureData";
import type { TypeLang } from "@/lib/types";

interface Props extends FeatureCardProps {
  lang: TypeLang;
}

const { srcImage, alt, title, description, lang } = Astro.props as Props;
const t = useTranslations(lang);
---

<div
  id={`${title} feature card`}
  aria-label={`${title} feature card`}
  class="relative w-full max-w-md h-full rounded-lg overflow-hidden mx-auto group"
>
  <Image
    src={srcImage}
    alt={alt}
    class="w-full h-full object-cover group-hover:scale-105 transition-all duration-400"
    width={330}
    height={354}
    loading="lazy"
  />
  <div class="feature-card-bg absolute bottom-0 left-0 right-0 p-5 text-center">
    <h3 class="text-3xl font-bold text-primary text-center mb-4">
      {t(title)}
    </h3>
    <p class="text-lg text-center leading-snug">
      {t(description)}
    </p>
  </div>
</div>
