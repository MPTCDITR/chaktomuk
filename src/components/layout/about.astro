---
// src/components/layout/About.astro
// This component is currently located at src/components/layout/About.astro

import { Image } from "astro:assets";
import mptc from "@/assets/images/mptc.jpg";

// FIX: Import TranslationKey from your i18n/ui.ts file
import type { TranslationKey } from "@/i18n/ui";

interface Props {
  lang: string;

  t: (key: TranslationKey) => string;
}

const { lang, t } = Astro.props as Props;
---

<section id="about" aria-labelledby="about-heading" class="py-16 md:py-24">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <div class="lg:order-2 space-y-5">
        <figure>
          <Image
            src={mptc}
            alt={t("about.mptcAltText")}
            class="w-full h-auto rounded-2xl"
            width={410}
            height={342}
          />
          <figcaption class="sr-only">
            {t("about.mptcFigCaption")}
          </figcaption>
        </figure>
      </div>
      <div class="lg:order-1">
        <header>
          <h2
            id="about-heading"
            class="text-primary text-[40px] font-bold mb-3"
          >
            {t("about.heading")}
          </h2>
        </header>
        <article>
          <p class="text-base text-muted-foreground leading-relaxed">
            {t("about.description")}
          </p>
        </article>
      </div>
    </div>
  </div>
</section>
