---
import { Image } from "astro:assets";
import mptc from "@/assets/images/mptc.jpg";

import { useTranslations } from "@/i18n/utils";
import type { TypeLang } from "@/lib/types";

interface Props {
  lang: TypeLang;
}

const { lang } = Astro.props as Props;
const t = useTranslations(lang);
---

<section id="about" aria-labelledby="about-heading" class="py-16 md:py-24">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <figure
        class="lg:order-2 space-y-5"
        aria-labelledby="about-image-caption"
      >
        <Image
          src={mptc}
          alt={t("about.mptcAltText")}
          class="w-full h-full rounded-2xl"
          width={1280}
          height={853}
          loading="lazy"
          decoding="async"
        />
        <figcaption id="about-image-caption" class="sr-only">
          {t("about.mptcAltText")}
        </figcaption>
      </figure>
      <article class="lg:order-1" aria-labelledby="about-heading">
        <header>
          <h2
            id="about-heading"
            class="text-primary text-[40px] font-bold mb-3"
          >
            {t("about.heading")}
          </h2>
        </header>
        <p class="md:text-lg text-base text-muted-foreground leading-relaxed">
          {t("about.description")}
        </p>
      </article>
    </div>
  </div>
</section>
