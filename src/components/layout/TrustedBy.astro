---
// src/pages/TrustedBy.astro
import { Image } from "astro:assets";
import dgc from "@/assets/logo/dgc.svg";
import mptc from "@/assets/logo/logo-mptc.png";
import trc from "@/assets/logo/TRC-Logo.jpg";
import cadt from "@/assets/logo/logo-cadt.png";
import cp from "@/assets/logo/Cambodia-Post-Logo.png";
import tc from "@/assets/logo/logo-tc.png";
---

<section id="trusted-by" aria-label="trusted-by" class="bg-accent/30">
  <div
    class="container mx-auto px-4 sm:px-6 lg:px-8 text-center py-16"
    aria-labelledby="trusted-by"
  >
    <h2
      class="text-4xl font-bold uppercase text-primary mb-8"
      aria-labelledby="trusted-by"
    >
      Trusted By
    </h2>
    <ul
      class="grid lg:grid-cols-6 md:grid-cols-4 sm:grid-cols-2 grid-cols-1 justify-center items-center gap-6"
      aria-labelledby="trusted-by"
    >
      <li aria-label="MPTC Logo">
        <Image
          src={mptc}
          alt="MPTC Logo"
          width={558}
          height={551}
          class="xl:w-[200px] xl:h-[200px] w-[168px] h-[168px] lg:object-cover md:object-contain object-cover mx-auto"
        />
      </li>
      <li aria-label="DGC Logo">
        <Image
          src={dgc}
          alt="DGC Logo"
          width={558}
          height={551}
          class="w-[258px] h-[251px] xl:object-cover object-contain mx-auto"
        />
      </li>
      <li aria-label="TRC Logo">
        <Image
          src={trc}
          alt="TRC Logo"
          width={558}
          height={551}
          class="w-[165px] h-[165px] object-contain mx-auto"
        />
      </li>
      <li aria-label="CADT Logo">
        <Image
          src={cadt}
          alt="CADT Logo"
          width={558}
          height={551}
          class="w-[158px] h-[151px] object-contain mx-auto"
        />
      </li>
      <li aria-label="CP Logo" class="lg:col-span-1 md:col-span-2">
        <Image
          src={cp}
          alt="CP Logo"
          width={558}
          height={551}
          class="w-[160px] h-[160px] object-contain mx-auto"
        />
      </li>
      <li aria-label="TC Logo" class="lg:col-span-1 md:col-span-2">
        <Image
          src={tc}
          alt="TC Logo"
          width={558}
          height={551}
          class="w-[170px] h-[170px] xl:object-cover object-contain mx-auto"
        />
      </li>
    </ul>
  </div>
</section>
