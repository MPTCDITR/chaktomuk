---
// src/components/Footer.astro
import { Image } from "astro:assets";
import ctm from "@/assets/logo/logo-ctm_white.png";
import dgc from "@/assets/logo/logo-mptc.png";
import {
  Facebook,
  Linkedin,
  Mail,
  MapPin,
  Send,
  Twitter,
  Youtube,
} from "lucide-react";
---

<footer id="contact" class="bg-primary text-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 pt-16 pb-8">
    <div class="md:grid md:grid-cols-3 gap-8 md:gap-12 space-y-8 md:space-y-0">
      <div
        class="md:col-span-1 col-span-2 flex justify-center md:justify-start"
      >
        <a href="/" class="mb-4">
          <Image
            src={ctm}
            alt="Chaktomuk Logo"
            width={225}
            height={63}
            loading="lazy"
          />
        </a>
      </div>
      <div>
        <h3 class="text-2xl font-bold mb-4">Other Links</h3>
        <ul class="space-y-3">
          <li>
            <a
              href="https://mptc.gov.kh/en/"
              target="_blank"
              rel="noopener noreferrer"
              class="underline hover:text-white transition-colors"
              >Ministry Of Post And Telecommunication</a
            >
          </li>
          <li>
            <a
              href="https://www.dgc.gov.kh/en"
              target="_blank"
              rel="noopener noreferrer"
              class="underline hover:text-white transition-colors"
              >Digital Government Committee</a
            >
          </li>
        </ul>
      </div>
      <div>
        <h3 class="text-2xl font-bold mb-4">Contact us</h3>
        <ul class="space-y-3">
          <li class="flex items-center gap-2">
            <Mail className="text-white" size={20} strokeWidth={2} />
            <a
              href="mailto:support@dgc.gov.kh"
              class="hover:text-white transition-colors">support@dgc.gov.kh</a
            >
          </li>
          <li class="flex items-start gap-2">
            <MapPin
              className="text-white mt-1 flex-shrink-0"
              size={20}
              strokeWidth={2}
            />
            <span class="leading-relaxed"
              >Building 13, Monivong Blvd, Sangkat Srah Chak, Khan Daun Penh,
              Phnom Penh, Cambodia, 120210</span
            >
          </li>
        </ul>
      </div>
    </div>

    <div class="flex place-content-end gap-5 mt-12">
      <a href="#" aria-label="LinkedIn" class="text-white hover:opacity-80">
        <Linkedin size={24} strokeWidth={2} />
      </a>
      <a href="#" aria-label="Twitter" class="text-white hover:opacity-80">
        <Twitter size={24} strokeWidth={2} />
      </a>
      <a href="#" aria-label="Telegram" class="text-white hover:opacity-80">
        <Send size={24} strokeWidth={2} />
      </a>
      <a href="#" aria-label="YouTube" class="text-white hover:opacity-80">
        <Youtube size={24} strokeWidth={2} />
      </a>
      <a href="#" aria-label="Facebook" class="text-white hover:opacity-80">
        <Facebook size={24} strokeWidth={2} />
      </a>
    </div>

    <div class="border-t-2 border-white mt-12 pt-8">
      <div
        class="flex flex-col md:items-center gap-4 md:flex-row md:justify-between"
      >
        <p class="text-xs md:text-base text-right md:text-left">
          &copy;2025 Ministry Of Post And Telecommunications
        </p>

        <div class="flex items-center gap-2 place-self-end">
          <span class="text-xs md:text-base text-white">Powered By</span>
          <Image src={dgc} alt="DGC Logo" class="" width={51} height={51} />
        </div>
      </div>
    </div>
  </div>
</footer>
