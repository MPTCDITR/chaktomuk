---
import type { StateProps } from "@/constants/statistic";
import type { languages } from "@/i18n/ui";
import { useTranslations } from "@/i18n/utils";

const { title, count } = Astro.props as StateProps;
const lang = Astro.params.lang as keyof typeof languages;
const t = useTranslations(lang);
---

<div class="flex flex-col items-center font-bold gap-4 min-w-3xs">
  <p class="text-5xl text-secondary">{count}</p>
  <p class="text-3xl text-primary">{t(title)}</p>
</div>
