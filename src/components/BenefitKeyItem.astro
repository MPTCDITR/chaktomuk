---
import type { KeyBenefitDataProps } from "@/data/KeyBenefitData";
import { useTranslations } from "@/i18n/utils";
import type { TypeLang } from "@/lib/types";

interface Props extends KeyBenefitDataProps {
  lang: TypeLang;
}

const {
  title,
  description,
  iconElement: IconElement,
  lang,
} = Astro.props as Props;
const t = useTranslations(lang);
---

<li aria-label={title} class="flex items-start gap-5">
  <div class="flex-shrink-0 text-primary">
    <IconElement strokeWidth={2} className="w-8 h-8" />
  </div>
  <article class="space-y-2">
    <h3 class="text-2xl font-semibold text-primary">
      {t(title)}
    </h3>
    <p class="text-muted-foreground">
      {t(description)}
    </p>
  </article>
</li>
