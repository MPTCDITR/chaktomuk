---
import { Card, CardContent } from "@/components/ui/card";
import type { AppDownloadCardProps } from "@/lib/types";
import { Image } from "astro:assets";

interface Props extends AppDownloadCardProps {}

const { title, appIcon, appName } = Astro.props;
---

<Card
  id={`app-download-card-${appName}`}
  className="bg-white rounded-2xl p-4 w-full min-w-72 shadow-none"
>
  <CardContent className="flex items-center gap-4 text-primary px-2">
    <Image
      src={appIcon}
      alt={appName}
      width={45}
      height={45}
      class={"object-cover h-10 w-10"}
    />
    <div class="space-y-1 font-bold">
      <h3 class="text-lg uppercase">{title}</h3>
      <p class="text-2xl uppercase">{appName}</p>
    </div>
  </CardContent>
</Card>
