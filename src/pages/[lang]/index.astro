---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/layout/Hero.astro";
import TrustedBy from "@/components/layout/TrustedBy.astro";
import Feature from "@/components/layout/Feature.astro";
import WhyUs from "@/components/layout/WhyUs.astro";
import Stats from "@/components/layout/Stats.astro";
import SupportedDevices from "@/components/layout/SupportedDevices.astro";

import { languages } from "@/i18n/ui";
import { useTranslations } from "@/i18n/utils";
import type { TypeLang } from "@/lib/types";

export async function getStaticPaths() {
  return Object.keys(languages).map((langKey) => {
    return {
      params: { lang: langKey as TypeLang },
    };
  });
}

const { lang } = Astro.params;
const t = useTranslations(lang);
---

<Layout title={t("nav.home")} lang={lang}>
  <Hero lang={lang} />
  <SupportedDevices lang={lang} />
  <Stats lang={lang} />
  <TrustedBy lang={lang} />
  <Feature lang={lang} />
  <WhyUs lang={lang} />
</Layout>
